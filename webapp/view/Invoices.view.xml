<mvc:View
  controllerName="project3.controller.Invoices"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar">
  
  <Page title="Invoices">
    <content>
    <fb:FilterBar id="filterBarInvoices" 
    showFilterConfiguration="false" 
    showRestoreButton="false" 
    showClearButton="false" 
    showGoOnFB="true" 
    useToolbar="true" 
    search=".onSearch">

    <fb:filterItems>
        <!-- Customer Name -->
        <fb:FilterItem name="CustomerName" label="Customer Name">
            <fb:control>
                <ComboBox id="cbInvoiceCustomerName" width="16rem" items="{/CustomerNames}">
                    <core:Item key="{key}" text="{name}" />
                </ComboBox>
            </fb:control>
        </fb:FilterItem>

        <!-- Product Name -->
        <fb:FilterItem name="ProductName" label="Product Name">
            <fb:control>
                <ComboBox id="cbInvoiceProductName" width="16rem" items="{/ProductNames}">
                    <core:Item key="{key}" text="{name}" />
                </ComboBox>
            </fb:control>
        </fb:FilterItem>

        <!-- Customer ID -->
        <fb:FilterItem name="CustomerID" label="Customer ID">
            <fb:control>
                <ComboBox id="cbInvoiceCustomerId" width="14rem" items="{/CustomerIds}">
                    <core:Item key="{key}" text="{name}" />
                </ComboBox>
            </fb:control>
        </fb:FilterItem>
    </fb:filterItems>
</fb:FilterBar>

            <Table id="Invoices_Table" inset="false" headerText="Invoices List" items="{/Invoices}">

                <columns>
                    <Column>
                        <Text text="Customer Id"/>
                    </Column>
                    <Column>
                        <Text text="Customer Name"/>
                    </Column>
                    <Column>
                        <Text text="Address"/>
                    </Column>
                    <Column>
                        <Text text="Order id"/>
                    </Column>
                    <Column>
                        <Text text="Order Date"/>
                    </Column>
                    <Column>
                        <Text text="Product Name"/>
                    </Column>
                    <Column>
                        <Text text="Price"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{CustomerID}"/>
                            <Text text="{CustomerName}"/>
                            <Text text="{Address}"/>
                            <Text text="{OrderID}"/>
                            <Text text="{OrderDate}"/>
                            <Text text="{ProductName}"/>
                            <Text text="{ExtendedPrice}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
  </Page>
</mvc:View>
