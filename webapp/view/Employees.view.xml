<mvc:View
  controllerName="project3.controller.Employees"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar">
  
  <Page title="Employees">
    <content>
    <fb:FilterBar id="filterBarEmployees" 
    showFilterConfiguration="false" 
    showRestoreButton="false" 
    showClearButton="false" 
    showGoOnFB="true" 
    useToolbar="true" 
    search=".onSearch">

    <fb:filterItems>
        <!-- Employee ID -->
        

        <!-- First Name -->
        <fb:FilterItem name="FirstName" label="First Name">
            <fb:control>
                <ComboBox id="cbFirstName" width="14rem" items="{/Employees}">
                    <core:Item key="{FirstName}" text="{FirstName}" />
                </ComboBox>
            </fb:control>
        </fb:FilterItem>

        <!-- Last Name -->
        <fb:FilterItem name="LastName" label="Last Name">
            <fb:control>
                <ComboBox id="cbLastName" width="14rem" items="{/Employees}">
                    <core:Item key="{LastName}" text="{LastName}" />
                </ComboBox>
            </fb:control>
        </fb:FilterItem>

        <fb:FilterItem name="Address" label="Address">
            <fb:control>
                <ComboBox id="cbAddress" width="12rem" items="{/Employees}">
                    <core:Item key="{Address}" text="{Address}" />
                </ComboBox>
            </fb:control>
        </fb:FilterItem>
    </fb:filterItems>
</fb:FilterBar>

            <Table id="Employees_Table" inset="false" headerText="Employees List" items="{/Employees}">

                <columns>
                    <Column>
                        <Text text="Employee ID"/>
                    </Column>
                    <Column>
                        <Text text="First Name"/>
                    </Column>
                    <Column>
                        <Text text="Last Name"/>
                    </Column>
                    <Column>
                        <Text text="Hire Date"/>
                    </Column>
                    <Column>
                        <Text text="Mobile No."/>
                    </Column>
                    <Column>
                        <Text text="Address"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{EmployeeID}"/>
                            <Text text="{FirstName}"/>
                            <Text text="{LastName}"/>
                            <Text text="{HireDate}"/>
                            <Text text="{HomePhone}"/>
                            <Text text="{Address}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
  </Page>
</mvc:View>
