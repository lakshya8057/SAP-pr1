
<mvc:View controllerName="project3.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="page" title="{i18n>title}" showHeader="true">
        <content>
            <VBox justifyContent="Center" alignItems="Center" fitContainer="true" renderType="Bare">
                <Title text="Northwind Company ERP Portal" titleStyle="H2" class="sapUiSmallMarginBottom" />

                <!-- Heading -->

                <!-- Tiles Section -->
                <VBox alignItems="Center" justifyContent="Center">

                    <!-- First Row -->
                    <HBox justifyContent="Center" alignItems="Center">
                        <GenericTile class="tile" press="onNavToProducts">
                            <TileContent>
                                <VBox alignItems="Center" justifyContent="Center">
                                    <Title text="Products" level="H2" class="tile_title" />
                                    <Text id="total_products"  class="qnty"/>
                                </VBox>
                            </TileContent>
                        </GenericTile>

                        <GenericTile class="sapUiSmallMarginBegin tile" press="onNavToCustomers" >
                            <TileContent> 
                                <VBox alignItems="Center" justifyContent="Center">
                                    <Title text="Customers" level="H2" class="tile_title"/>
                                    <Text id="total_customers" class="qnty"/>
                                </VBox>
                            </TileContent>
                        </GenericTile>

                        <GenericTile class="sapUiSmallMarginBegin tile" press="onNavToEmployees">
                            <TileContent>
                                <VBox alignItems="Center" justifyContent="Center">
                                    <Title text="Employees" level="H2" class="tile_title"/>
                                    <Text id="total_employees"  class="qnty"/>
                                </VBox>
                            </TileContent>
                        </GenericTile>
                    </HBox>

                    <!-- Second Row -->
                    <HBox justifyContent="Center" alignItems="Center" class="sapUiSmallMarginTop">
                        <GenericTile class="tile" press=".onNavToOrders">
                            <TileContent>
                                <VBox alignItems="Center" justifyContent="Center">
                                    <Title text="Orders" level="H2" class="tile_title"/>
                                    <Text id="total_orders"  class="qnty"/>
                                </VBox>
                            </TileContent>
                        </GenericTile>

                        <GenericTile class="sapUiSmallMarginBegin tile" press=".onNavToInvoices">
                            <TileContent>
                                <VBox alignItems="Center" justifyContent="Center">
                                    <Title text="Invoices" level="H2" class="tile_title"/>
                                    <Text id="total_invoices" class="qnty" />
                                </VBox>
                            </TileContent>
                        </GenericTile>

                        <GenericTile class="sapUiSmallMarginBegin tile" press=".onNavToSuppliers">
                            <TileContent>
                                <VBox alignItems="Center" justifyContent="Center">
                                    <Title text="Suppliers" level="H2" class="tile_title"/>
                                    <Text id="total_suppliers" class="qnty" />
                                </VBox>
                            </TileContent>
                        </GenericTile>
                    </HBox>

                </VBox>
            </VBox>
        </content>
    </Page>

</mvc:View>
