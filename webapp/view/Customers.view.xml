<mvc:View
  controllerName="project3.controller.Customers"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar">
  
  <Page title="Customers">
    <content>
    <fb:FilterBar id="filterBarCustomers" 
    showFilterConfiguration="false" 
    showRestoreButton="false" 
    showClearButton="false" 
    showGoOnFB="true" 
    useToolbar="true" 
    search=".onSearch">

    <fb:filterItems>
        <!-- Customer ID -->
        <fb:FilterItem name="CustomerID" label="Customer ID">
            <fb:control>
                <ComboBox id="cbCustomerId" width="12rem" items="{/CustomerIds}">
                    <core:Item key="{key}" text="{name}" />
                </ComboBox>
            </fb:control>
        </fb:FilterItem>

        <!-- Customer Name -->
        <fb:FilterItem name="CustomerName" label="Customer Name">
            <fb:control>
                <ComboBox id="cbCustomerName" width="16rem" items="{/CustomerNames}">
                    <core:Item key="{key}" text="{name}" />
                </ComboBox>
            </fb:control>
        </fb:FilterItem>
    </fb:filterItems>
</fb:FilterBar>

            <Table id="CustomersTable" inset="false" headerText="Customers List" items="{/Customers}">

                <columns>
                    <Column>
                        <Text text="Customer ID"/>
                    </Column>
                    <Column>
                        <Text text="Company"/>
                    </Column>
                    <Column>
                        <Text text="Name"/>
                    </Column>
                    <Column>
                        <Text text="Mobile no."/>
                    </Column>
                    <Column>
                        <Text text="Address"/>
                    </Column>
                    <Column>
                        <Text text="Nationality"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{CustomerID}"/>
                            <Text text="{CompanyName}"/>
                            <Text text="{ContactName}"/>
                            <Text text="{Phone}"/>
                            <Text text="{Address}"/>
                            <Text text="{Country}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
  </Page>
</mvc:View>
