<mvc:View
  controllerName="project3.controller.Customers"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar">
  
  <Page title="Customers">
    <content>
    <fb:FilterBar id="filterBarCustomers" 
    showFilterConfiguration="false" 
    showRestoreButton="false" 
    showClearButton="false" 
    showGoOnFB="true" 
    useToolbar="true" 
    search=".onSearch">

    <fb:filterItems>
        <!-- Company (from CompanyName) -->
        <fb:FilterItem name="CompanyName" label="Company">
            <fb:control>
                <ComboBox id="cbCustomerId" width="16rem" items="{/Customers}">
                    <core:Item key="{CompanyName}" text="{CompanyName}" />
                </ComboBox>
            </fb:control>
        </fb:FilterItem>

        <!-- Nationality (from Country) -->
        <fb:FilterItem name="Country" label="Nationality">
            <fb:control>
                <ComboBox id="cbCustomerName" width="12rem" items="{/Customers}">
                    <core:Item key="{Country}" text="{Country}" />
                </ComboBox>
            </fb:control>
        </fb:FilterItem>
    </fb:filterItems>
</fb:FilterBar>


            <Table id="CustomersTable" inset="false" headerText="Customers List" items="{/Customers}">

                <columns>
                    <Column>
                        <Text text="Customer ID"/>
                    </Column>
                    <Column>
                        <Text text="Company"/>
                    </Column>
                    <Column>
                        <Text text="Name"/>
                    </Column>
                    <Column>
                        <Text text="Mobile no."/>
                    </Column>
                    <Column>
                        <Text text="Address"/>
                    </Column>
                    <Column>
                        <Text text="Nationality"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{CustomerID}"/>
                            <Text text="{CompanyName}"/>
                            <Text text="{ContactName}"/>
                            <Text text="{Phone}"/>
                            <Text text="{Address}"/>
                            <Text text="{Country}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
  </Page>
</mvc:View>
